
<%include partials/header.ejs%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Create New Blog</h1>
		<div style="width:30%;margin:0 auto;">
			<form action="/blogs" method="POST">
				<div class="form-group">
				    <label>Title</label>
	                <input class="form-control" type="text" name="blog[title]" placeholder="Title">
				</div>
				<div class="form-group">
				    <label>Image</label> 
				    <input class="form-control" type="text" name="blog[image]" placeholder="Image url"> 
				</div>
				<div class="form-group">
				     <label>Body</label>
				    <textarea class="form-control" rows="5" name=blog[body]" placeholder="Discription"></textarea>
				</div>	
				<input type="submit" class="btn btn-large btn-primary">	
			</form>
		</div>
	</div>
</div>
<%include partials/footer.ejs%>
