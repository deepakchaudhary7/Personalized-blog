
<%include partials/header.ejs%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit <%=blogs.title%> Post</h1>
		<div style="width:30%;margin:0 auto;">
			<form action="/blogs/<%=blogs._id%>?_method=PUT" method="POST">
				<div class="form-group">
				    <label>Title</label>
	                <input class="form-control" type="text" name="blog[title]" value="<%=blogs.title%>">
				</div>
				<div class="form-group">
				    <label>Image</label> 
				    <input class="form-control" type="text" name="blog[image]" value="<%=blogs.image%>"> 
				</div>
				<div class="form-group">
				     <label>Body</label>
				    <textarea class="form-control" rows="5" name=blog[body]><%=blogs.body%></textarea>
				</div>	
				<button type="submit" class="btn btn-large btn-primary">Update</button>	
			</form>
		</div>
	</div>
</div>
<%include partials/footer.ejs%>
